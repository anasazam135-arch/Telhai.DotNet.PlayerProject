<Window x:Class="Telhai.DotNet.PlayerProject.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#333" BorderThickness="1" Padding="5">
            <StackPanel>
                <Image x:Name="imgEditorCover" Width="180" Height="180" Stretch="UniformToFill"/>
                <TextBlock Text="Images" Margin="0,10,0,5" FontWeight="Bold"/>
                <ListBox x:Name="lstImages" Height="120"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                    <Button Content="Add" Width="70" Margin="4" Click="BtnAddImage_Click"/>
                    <Button Content="Remove" Width="70" Margin="4" Click="BtnRemoveImage_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Track Name"/>
            <TextBox x:Name="txtTrackName" />
            <TextBlock Text="Artist" Margin="0,8,0,0"/>
            <TextBox x:Name="txtArtist" />
            <TextBlock Text="Album" Margin="0,8,0,0"/>
            <TextBox x:Name="txtAlbum" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Save" Width="90" Margin="6" Click="BtnSave_Click"/>
                <Button Content="Close" Width="90" Margin="6" Click="BtnClose_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
